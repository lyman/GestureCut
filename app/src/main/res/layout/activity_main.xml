<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/global_bkground">

    <android.gesture.GestureOverlayView
        android:id="@+id/main_gesture_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/gesture_overlay_margin">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/gesture_bg_title_use"
            android:textSize="@dimen/text_size_large_title"
            android:textColor="@android:color/holo_blue_dark"/>
    </android.gesture.GestureOverlayView>

    <ImageView
        android:id="@+id/main_settings_outmost"
        android:layout_width="@dimen/icon_dimen_global"
        android:layout_height="@dimen/icon_dimen_global"
        android:layout_gravity="top|left"
        android:layout_marginTop="@dimen/settings_outmost_margin"
        android:layout_marginLeft="@dimen/settings_outmost_margin"
        android:src="@drawable/ic_settings_3"/>

    <org.vliux.android.gesturecut.ui.view.GestureList
        android:id="@+id/main_gesture_list_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></org.vliux.android.gesturecut.ui.view.GestureList>
</FrameLayout>