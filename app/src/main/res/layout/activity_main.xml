<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.gesture.GestureOverlayView
        android:id="@+id/main_gesture_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/gesture_overlay_margin"
        android:gestureColor="@android:color/holo_red_light">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/main_actv_time_margin_left">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom|right"
                android:text="12:27"
                android:textStyle="italic"
                android:textSize="@dimen/text_size_clock"
                android:textColor="@color/clock_textv_color"
                android:shadowColor="@android:color/black"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:gravity="top|right"
                android:text="2014-04-12 | Saturday"
                android:textStyle="italic"
                android:textColor="@color/clock_textv_color"
                android:textSize="@dimen/text_size_small_title"
                android:shadowColor="@android:color/black"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"/>
        </LinearLayout>
    </android.gesture.GestureOverlayView>

    <ImageView
        android:id="@+id/main_settings_outmost"
        android:layout_width="@dimen/icon_dimen_global"
        android:layout_height="@dimen/icon_dimen_global"
        android:layout_gravity="top|left"
        android:layout_marginTop="@dimen/settings_outmost_margin"
        android:layout_marginLeft="@dimen/settings_outmost_margin"
        android:src="@drawable/ic_info_white"/>

    <org.vliux.android.gesturecut.ui.view.GestureList
        android:id="@+id/main_gesture_list_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></org.vliux.android.gesturecut.ui.view.GestureList>

    <org.vliux.android.gesturecut.ui.view.UnlockBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">
    </org.vliux.android.gesturecut.ui.view.UnlockBar>
</FrameLayout>